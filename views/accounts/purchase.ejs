<form action="/accounts/purchase"  method="POST" enctype="multipart/form-data " > </*onsubmit="returen false"*/>
    <fieldset >
        <legend>Add purchase </legend>
        <h3 name="supplier">supplier</h3>
        <label >name</label>
        <input type="text" name="name">
        <label >address</label>
        <input type="text" name="address">
        <label >phoneNumber</label>
        <input type="text" name="phoneNumber">
        <label >confirmationDate</label>
        <input type="text" name="confirmationDate">
        <label >paymentTerms</label>
        <input type="text" name="paymentTerms">
        <label >documentNumber</label>
        <input type="text" name="documentNumber">
        <label >productName</label>
        <select name="productName">
            <%for(let item of items){%> 
                <%if (item.itemInEnglish.length !==0){%>
                <option ><%= item.itemInEnglish%></option>
                <%}%>
            <%}%>
        </select>
        <label >pricePerOne</label>
        <input type="text" name="pricePerOne">
        <label >quantity</label>
        <input type="text" name="quantity">
        
    </fieldset>
        <input type="submit" id="submitDetails" name="submitDetails" value="Submit" /><br>

</form>



